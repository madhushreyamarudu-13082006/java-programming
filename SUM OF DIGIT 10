import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;
import java.io.*;

public class Solution {

    public static void main(String[] args) {
        Scanner ch = new Scanner(System.in);
        int n = ch.nextInt();
        int sum = 0;
        if (n > 99) {
            while (n > 0) {
                int rem = n % 10;
                sum += rem;
                n = n / 10;
            }
            System.out.println("Sum of digit is " + sum);
        } else {
            System.out.println("Invalid Input");
        }
    }        
}
